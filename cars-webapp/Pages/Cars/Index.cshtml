@page
@model cars_webapp.Pages.Cars.IndexModel
@{

}
<div class="container col-md-3 h-100">
    <h2 class=" mb-3">Connexion</h2>
    <form method="post">
        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @Model.ErrorMessage
            </div>
        }
        <div class="form-group">
            <label asp-for="AdminUser.UserName" class="fs-5 fw-bold m-2"></label>
            <input asp-for="AdminUser.UserName" class="form-control" />
            <span asp-validation-for="AdminUser.UserName" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="AdminUser.Password" class="fs-5 fw-bold m-2"></label>
            <input asp-for="AdminUser.Password" class="form-control" />
            <span asp-validation-for="AdminUser.Password" class="text-danger"></span>

        </div>
        <div class="form-group mt-4 d-flex">
            <button class="btn btn-outline-primary btn-lg w-50 mx-auto">Log in</button>
        </div>
    </form>
</div>