@page
@model cars_webapp.Pages.Cars.UpdateCar
@{
    ViewData["Title"] = "UpdateCar";
}
<div class="container col-md-6">
    @{
        if (Model.Car == null)
        {
            <h2>Car not found</h2>
        }
        else
        {
            <h2>Modifier les détails de l'annonce</h2>
            <form method="post">
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carBrand">Marque de la voiture :</label>
                    <input type="text" class="form-control" id="carBrand" value="@Model.Car.Brand" name="carBrand"
                        asp-for="Car.Brand">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carModel">Modèle de la voiture :</label>
                    <input type="text" class="form-control" id="carModel" value="@Model.Car.Model" name="carModel"
                        asp-for="Car.Model">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carYear">Année de la voiture : </label>
                    <input type="text" class="form-control" id="carYear" value="@Model.Car.Year" name="carYear"
                        asp-for="Car.Year">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carFinition">Finition de la voiture :</label>
                    <input type="text" class="form-control" id="carFinition" value="@Model.Car.Finition" name="carFinition"
                        asp-for="Car.Finition">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carDateOfPurchase">Date d'achat (€) :</label>
                    <input type="date" class="form-control" id="carDateOfPurchase"
                        value="@Utils.DateConvertor.DateTimeToStringHtml(Model.Car.DateOfPurchase)" name="carDateOfPurchase"
                        asp-for="Car.DateOfPurchase">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carPurchasePrice">Prix d'achat (€) :</label>
                    <input type="text" class="form-control" id="carPurchasePrice" value="@Model.Car.PurchasePrice"
                        name="carPurchasePrice" asp-for="Car.PurchasePrice">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carReparations">Réparations :</label>
                    <input type="text" class="form-control mb-2" id="carReparations"
                        value="@Models.Car.ListToString(Model.Car.Reparations)" name="carReparations">
                    <span class="help-block mx-2">Liste séparée par des virgules</span>
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carReparationsCost">Coûts de réparation (€) :</label>
                    <input type="text" class="form-control" id="carReparationsCost" value="@Model.Car.ReparationsCost"
                        name="carReparationsCost" asp-for="Car.ReparationsCost">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carDateOfAvailability">Date de disponibilité à la vente :</label>
                    <input type="date" class="form-control" id="carDateOfAvailability"
                        value="@Utils.DateConvertor.DateTimeToStringHtml(Model.Car.DateOfAvailabilityToSell)"
                        name="carDateOfAvailability" asp-for="Car.DateOfAvailabilityToSell">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carSellingPrice">Prix de vente (€) :</label>
                    <input type="text" class="form-control" id="carSellingPrice" value="@Model.Car.SellingPrice"
                        name="carSellingPrice" asp-for="Car.SellingPrice">
                </div>
                <div class="form-group m-3">
                    <label class="fs-5 fw-bold m-2" for="carDateOfSale">Date de vente :</label>
                    <input type="date" class="form-control" id="carDateOfSale"
                        value="@Utils.DateConvertor.DateTimeToStringHtml(Model.Car.DateOfSale)" name="carDateOfSale"
                        asp-for="Car.DateOfSale">
                </div>
                <div class="form-check m-3">
                    <input class="form-check-input" type="checkbox" value="" id="isSold" name="isSold" @if (Model.Car.IsSold)
                    {
                        <text>checked</text>
                    }>
                    <label class="form-check-label fs-5 fw-bold m-2" for="isSold">
                        La voiture est vendue
                    </label>
                </div>


                <div class="form-group mt-3">
                    <label for="carImage">Car Image:</label>
                    <input type="file" class="form-control-file" id="carImage" name="carImage" accept="image/*">
                    <img id="img-preview" src="#" alt="Preview" class="img-preview m-auto w-50 mt-5" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        }
    }
</div>
